{
  "name": "app-kevlar",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "yarn transpile:electron; cross-env NODE_ENV=development electron .",
    "build": "tsc && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "transpile:electron": "tsc --project src/electron/tsconfig.json",
    "dist:mac": "yarn transpile:electron && yarn build && electron-builder --mac --arm64",
    "dist:win ": "yarn transpile:electron && yarn build && electron-builder --win --x64",
    "dist:linux": "yarn transpile:electron && yarn build && electron-builder --linux --x64"
  },
  "dependencies": {
    "@chainsafe/blst": "^0.2.10",
    "@lightclients/kevlar": "^0.4.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dmg-builder": "24.13.3",
    "electron-builder-squirrel-windows": "24.13.3",
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/node": "^22.9.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^24.6.4",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.10"
  }
}
